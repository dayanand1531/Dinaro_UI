<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".log_in">
    <TextView
        android:id="@+id/tvforgetpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password ?"
        android:fontFamily="sans-serif"
        android:layout_gravity="right"
        android:textSize="@dimen/_12ssp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="#000000"

        />


    <TextView
        android:id="@+id/tv_login_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_24ssp"
        android:textStyle="bold"
        android:textColor="#000000"

        android:fontFamily="sans-serif"
        android:layout_margin="@dimen/_10sdp"
        android:text="Log in to Dinaro."

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#000000"
        android:text="Enter your details."
        android:layout_margin="@dimen/_10sdp"
        android:lineSpacingExtra="@dimen/_5ssp"

        />
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/eteamiladdress"
    android:hint="Email Address"
    android:layout_margin="@dimen/_10sdp"
    android:background="@drawable/edittext_background"
    android:padding="@dimen/_10sdp"
    android:maxLength="30"
    android:inputType="textEmailAddress"
    android:singleLine="true"
    />

    <TextView
        android:id="@+id/errorloginemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etloginpassword"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/edittext_background"
        android:padding="@dimen/_10sdp"
        android:hint="Password"
        android:maxLength="15"
        android:inputType="textPassword"
        android:singleLine="true"
        />
    <TextView
        android:id="@+id/tverrorloginpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:gravity="center|bottom"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/tv_login_signtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12ssp"
        android:layout_margin="@dimen/_10sdp"
        android:fontFamily="sans-serif"
        android:layout_gravity="left"
        android:textStyle="normal"
        android:textColor="#000000"
        android:text="Donâ€™t have an account? Sign up!"
        android:lineSpacingExtra="@dimen/_5ssp"

        />
    <Button
        android:id="@+id/btn_login_dinaro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@android:color/black"
        android:fontFamily="sans-serif"
        android:padding="@dimen/_10sdp"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textStyle="bold"

        />
</LinearLayout>

</LinearLayout>