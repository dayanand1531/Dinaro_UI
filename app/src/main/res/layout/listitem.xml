<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_5sdp"
    android:id="@+id/recentlayout"
    >
<ImageView
    android:id="@+id/ivzuku"
    android:layout_margin="@dimen/_5sdp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/path_path_path"
    />
    <LinearLayout
        android:layout_margin="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:paddingTop="@dimen/_10sdp"
        >
        <TextView
            android:id="@+id/tvzukuken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"

            android:textColor="#000000"
            android:text="Zuku Kenya"
            />
        <TextView
            android:id="@+id/tvpayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#808080"
            android:lineSpacingExtra="4.3sp"
            android:text="Payment"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingTop="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        >
        <TextView
            android:id="@+id/tvkes"
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#000000"
            android:layout_gravity="right"
            android:gravity="end"
            android:text="- KES 2,499"
            />
        <TextView
            android:id="@+id/tvviewrecept"
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_7ssp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#54c0f0"
            android:layout_gravity="right"
            android:lineSpacingExtra="7.8sp"
            android:gravity="end"
            android:text="View receipt"
            />
    </LinearLayout>

</LinearLayout>