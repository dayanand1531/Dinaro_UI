<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/mainlayout"
    android:layout_height="match_parent">
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/white" />
    <LinearLayout
        android:id="@+id/layoutDots"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dots_height"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dots_margin_bottom"
        android:gravity="center"
        android:orientation="horizontal"></LinearLayout>


    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:elevation="@dimen/_18sdp"
        android:layout_height="@dimen/_48sdp"
        android:layout_alignTop="@id/viewpager"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/_10sdp" />
    <Button
        android:visibility="gone"
        android:id="@+id/btn_welcome_getstarted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:padding="@dimen/_10sdp"
        android:text="Get started"
        android:textAllCaps="false"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"

        android:textColor="#e41995"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_above="@+id/btn_welcome_skip"
        android:layout_marginBottom="@dimen/_65sdp"

        />

    <Button

        android:id="@+id/btn_welcome_skip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="#e41995"
        android:text="Skip"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/_10sdp"
        android:textAllCaps="false"
        android:textColor="#ffffff"
     />

</RelativeLayout>